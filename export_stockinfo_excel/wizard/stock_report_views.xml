<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model='ir.ui.view' id='stock_xls_report_view_form'>
        <!--Stock Report form view-->
        <field name="name">stock.xls.report.view.form</field>
        <field name="model">stock.xls.report</field>

             
             
        <field name="arch" type="xml">
            <form >
                <group>
                    <group >
                        <field name="tracking_wise" class="o_setting_right_pane" widget="radio" options="{'horizontal': True}"/>
                        <field name="warehouse" class="o_setting_right_pane" widget="many2many_tags" invisible="not tracking_wise == 'warehouse_wise'" />
                        <field name="location" class="o_setting_right_pane" widget="many2many_tags" invisible="not tracking_wise == 'location_wise'"/>
                    </group>
                    <group>
                        <field name="start_date" class="o_setting_right_pane"/>
                        <field name="end_date" class="o_setting_right_pane"/>
                    </group>
                    <!-- <group>
                        <field name ='filter_active' class="o_setting_right_pane"/>
                    </group> -->
                    <group>
                        <field name='enable_red_text' class="o_setting_right_pane"/>
                    </group>
                    
                    <!-- <group >
                        <field name='supplier'  > 
                            <tree > 
                                <field name='name' />
                            </tree>
                        </field>
                    </group>
                   
                    <group >
                        <field name="category" >
                            <tree>
                                <field name="name"/>
                            </tree>
                        </field>
                    </group> -->
                
                </group>
                <footer>
                    <button name="export_pdf" type="object" default_focus="1" string="Print PDF" class="oe_highlight" icon="fa-download"/>

                    <button name="export_xls" type="object" default_focus="1" string="Print Excel" class="oe_highlight" icon="fa-download"/>

                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record model='ir.actions.act_window' id='stock_xls_report_action'>
        <!--Stock Report form view action-->
        <field name="name">Export Stock</field>
        <field name="res_model">stock.xls.report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="stock_xls_report_view_form"/>
        <field name="target">new</field>
    </record>
    <!--menu action for Current stock in Excel-->
    <menuitem name="Export Stock"
              parent="stock.menu_warehouse_report"
              id="export_excel"
              action="stock_xls_report_action"
              sequence="3"/>
</odoo>
